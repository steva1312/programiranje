<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Log In</title>
</head>
<body>
    <div class="form-card">
        <header class="form-header">Log In</header>
        <% if(typeof messages.error != 'undefined') { %>
            <header class="err">
                <i class="fa fa-times-circle"></i>
                <%= messages.error %>
            </header>
        <% } %>
        <% if(succ_msg.length > 0) { %>
                <header class="succ">
                    <i class="fa fa-check"></i>
                    <%= succ_msg %>
                </header>
        <% } %>
        <form action="/account/login" method="POST" class="user-form">
            <div>
                <label for="username">Enter username:</label>
                <input type="text" name="username" id="username" required value="<%= typeof username != 'undefined' ? username : '' %>" placeholder="Type it here ...">
            </div>
            <div>
                <label for="password">Enter password:</label>
                <input type="password" name="password" id="password" required value="<%= typeof password != 'undefined' ? password : '' %>" placeholder="Type it here ...">
            </div>
            <button type="submit" class="form-btn">Submit</button>
        </form>
        <header class="desc-header">Don't have an account? <a href="/account/register">Make one </a>then.</header>
    </div>

    <script src="/animation.js"></script>
</body>
</html>